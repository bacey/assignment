# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
#GET     /                                       Application.index
# TODO: / should redirect to /products

GET     /products                               Product.listAllProducts
GET     /products/new                           Product.newProduct
POST    /products                               Product.createProduct
#GET     /products/{:id}/edit                    ProductController.editProduct
#DELETE  /products/{:id}                         ProductController.deleteProduct

GET     /categories                             CategoryController.index
GET     /categories/new                         Category.newCategory
POST    /categories                             Category.createCategory
#GET     /categories/{:id}/edit                  Category.editCategory
#DELETE  /categories/{:id}                       Category.deleteCategory

# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

