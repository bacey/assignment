# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
#GET     /                                       Application.index
# TODO: / should redirect to /products

GET     /products                               ProductController.index
GET     /products/new                           ProductController.newProduct
POST    /products                               ProductController.createProduct
GET     /products/{<[0-9]+>id}/edit             ProductController.editProduct
DELETE  /products/{<[0-9]+>id}                  ProductController.deleteProduct

GET     /categories                             CategoryController.index
GET     /categories/new                         CategoryController.newCategory
POST    /categories                             CategoryController.create
GET     /categories/{<[0-9]+>id}/edit           CategoryController.edit
DELETE  /categories/{<[0-9]+>id}                CategoryController.delete

# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
# TODO: delete this
#*       /{controller}/{action}                  {controller}.{action}
